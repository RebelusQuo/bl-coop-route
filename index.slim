    title Borderlands 1 coop speedrun script
    link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    scss:
      $col-width: 260px;

      @mixin vendor($prop, $value) {
        -webkit-#{$prop}: $value;
           -moz-#{$prop}: $value;
                #{$prop}: $value;
      }

      * {
        font-family: sans-serif;
        font-size: 12px;
        box-sizing: border-box;
      }
      ul { margin: 10px 0; padding: 3px 5px; list-style: none; }
      ul ul { margin: 0; margin-left: 1em; padding: 0; }
      ul li:before { content: "\2013\020"; } /* en-dash, space */
      .ribbon {
        width: 100%;
        position: fixed;
        top: 0;
        background-color: white;
      }
      .specs {
        width: 1440px;
        height: 155px;
      }
      .specs:before,
      .specs:after { content: " "; display: table }
      .specs:after { clear: both; }
      .column {
        padding: 10px;
        min-width: 150px;
        height: 100%;
        position: relative;
        float: left;
      }
      .lilith { background-color: lightcoral; }
      .roland { background-color: steelblue; }
      .script {
        margin-top: 155px;
        padding: 5px;
        height: 750px;
        @media (min-height: 970px) { height: 970px; }
        @media (min-height: 1170px) { height: 1170px; }
        @include vendor(column-width, $col-width);
        @include vendor(column-gap, 0);
      }
      .script div { padding: 0 15px; overflow: auto; }
      .blue { background-color: blue; }
      .darkblue { background-color: darkblue; }
      .green { background-color: darkgreen; }
      .orange { background-color: darkorange; }
      .crimson { background-color: crimson; }
      .red { background-color: red; }
      ul.pink { background-color: lightpink; }
      ul.aqua { background-color: aquamarine; }
      ul.green { background-color: greenyellow; }
      ul.gold { background-color: gold; }
      ul.blue { background-color: lightblue; }
      ul.cyan { background-color: lightcyan; }

